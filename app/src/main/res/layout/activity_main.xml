<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:hint="Name"
            android:paddingTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:text="Which of these languages are you fluent in?" />

        <CheckBox
            android:id="@+id/English"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:onClick="onCheckboxClicked"
            android:text="English" />

        <CheckBox
            android:id="@+id/German"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="1dp"
            android:onClick="onCheckboxClicked"
            android:text="German" />

        <CheckBox
            android:id="@+id/French"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="1dp"
            android:onClick="onCheckboxClicked"
            android:text="French" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:text="Please answer the questions below by selecting the correct option"
            android:textColor="#000000" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:text="1. Do you _____ chocolate milk?" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="16dp">

            <RadioButton
                android:id="@+id/radio_Like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Like" />

            <RadioButton
                android:id="@+id/radio_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="likes" />

            <RadioButton
                android:id="@+id/radio_beLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Be Like" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:text="2. He _____ not want to go to the movies." />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="16dp">

            <RadioButton
                android:id="@+id/radio_do"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="do" />

            <RadioButton
                android:id="@+id/radio_does"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="does" />

            <RadioButton
                android:id="@+id/radio_is"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="is" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:text="3. He ____________ now." />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="16dp">

            <RadioButton
                android:id="@+id/radio_playsTennis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="plays tennis" />

            <RadioButton
                android:id="@+id/radio_wantsBreakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wants breakfast" />

            <RadioButton
                android:id="@+id/radio_walksHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="walks home" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:text="4. It _____ a beautiful day today." />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="16dp">

            <RadioButton
                android:id="@+id/radio_isDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="is" />

            <RadioButton
                android:id="@+id/radio_are"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="are" />

            <RadioButton
                android:id="@+id/radio_am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="am" />
        </RadioGroup>

        <Button
            android:id="@+id/finish_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:onClick="finish"
            android:text="SUBMIT"
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>